<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Add_Address_Activity"
    android:orientation="vertical"
    android:background="@drawable/backb"
    >

    <TextView
        android:textColor="#fbf9f9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:textSize="40sp"
        android:textAppearance="@style/TextAppearance.Compat.Notification.Time"
        android:layout_marginBottom="20dp"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginVertical="0dp"
        android:background="@android:drawable/sym_def_app_icon" />

    <TextView
        android:id="@+id/textView"
        android:textColor="#fbf9f9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editText_name"
        android:layout_alignStart="@+id/editText_name"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:textSize="40sp"
        android:text="Name"
        android:textAppearance="@style/TextAppearance.Compat.Notification.Time" />

    <EditText
        android:id="@+id/editText_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:textColor="#fbf9f9"
        android:ems="10"
        android:textSize="30sp"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="input_Name" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:textColor="#fbf9f9"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/editText_name"
        android:layout_gravity="center_horizontal"
        android:text="PhoneNumber" />




    <EditText
        android:id="@+id/editText_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:textColor="#fbf9f9"
        android:gravity="center"
        android:inputType="textPhonetic"
        android:textSize="30sp"
        android:text="input_your_Phone_number" />

    <Button
        android:id="@+id/button_submit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="100dp"
        android:text="Sumbit" />
</LinearLayout>